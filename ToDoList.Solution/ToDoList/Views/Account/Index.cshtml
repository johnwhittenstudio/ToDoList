@{
  Layout = "_Layout";
}

@using System.Security.Claims
<div class="container">
<br>
<br>
  <div class="col-md-12">
    <div class=row>
    &nbsp;
    &nbsp;
    &nbsp;
    &nbsp;  
      <div id="card" class="card border-dark mb-3" style="position: center; width: 100%; height: 50%">
        <div class="card-header">
          <center><h1>Authentication with Identity</h1></center>
        </div>
        <br>
        &nbsp;
        &nbsp;
          @if (User.Identity.IsAuthenticated)
          {
              <center><strong><h1 id="title" style="font-size:4vw">Hello @User.Identity.Name!</h1></strong>
              <br>
              @using (Html.BeginForm("LogOff", "Account"))
              {
                  <input type="submit" id="button" type="button" class="btn btn-outline-dark my-sm-0" value="Log out" />
              }
              </center>
          }
          else
          {
        <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0"style="max-height: 5rem; max-width: 15rem;"> @Html.ActionLink("Register", "Register")</button>
        &nbsp;
        <button id="button" type="button" class="btn btn-outline-dark my-sm-0"style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Log in", "Login")</button></center>
          }
        &nbsp;     
        <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Home", "Index", "Home")</button></center>
        &nbsp;   
      </div>
    </div>
  </div>
</div>