@{
  Layout = "_Layout";
}

@using ToDoList.ViewModels

@model LoginViewModel
<div class="container">
<br>
<br>
  <div class="col-md-12">
    <div class=row>
    &nbsp;
    &nbsp;
    &nbsp;
    &nbsp;  
      <div id="card" class="card border-dark mb-3" style="position: center; width: 100%; height: 50%">
        <div class="card-header">
        <center><h2>Log in with your account</h2></center>
        </div>
        <br>
        &nbsp;
        &nbsp;
        <center>@using (Html.BeginForm())
        {
            @Html.LabelFor(m => m.Email)
            @Html.TextBoxFor(m => m.Email)

            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password)

            <input type="submit" value="Log in" id="button" type="button" class="btn btn-outline-dark my-sm-0" />
        }
        </center>
        &nbsp;
      </div>
    </div>
  </div>
</div>