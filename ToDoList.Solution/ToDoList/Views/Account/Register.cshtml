@{
  Layout = "_Layout";
}

@using ToDoList.ViewModels

@model RegisterViewModel
<div class="container">
<br>
<br>
  <div class="col-md-12">
    <div class=row>
    &nbsp;
    &nbsp;
    &nbsp;
    &nbsp;  
      <div id="card" class="card border-dark mb-3" style="position: center; width: 100%; height: 50%">
        <div class="card-header">
          <center><h1>Register a new user</h1></center>
        </div>
        <br>
        &nbsp;
        &nbsp;
        <center>@using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.LabelFor(user => user.Email)
            @Html.TextBoxFor(user=> user.Email)

            @Html.LabelFor(user=> user.Password)
            @Html.PasswordFor(user=> user.Password)

            @Html.LabelFor(user=> user.ConfirmPassword)
            @Html.PasswordFor(user=> user.ConfirmPassword)

            <input type="submit" value="Register" id="button" type="button" class="btn btn-outline-dark my-sm-0"/>
        }
        </center>
        &nbsp;
      </div>
    </div>
  </div>
</div>