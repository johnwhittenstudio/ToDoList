@{
  Layout = "_Layout";
}

@model ToDoList.Models.Category
<div class="container">
  <br>
  <br>
  <div class="col-md-12">
    <div class=row>
      &nbsp;
      &nbsp;
      &nbsp;
      &nbsp;
      <div id="card" class="card border-dark mb-3" style="position: center; width: 100%; height: 50%">
        <div class="card-header">
          <center>
          <h1>Add a new category</h1>
          </center>
        </div>
        &nbsp;          
          @using (Html.BeginForm())
          {
            <center>
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name, new { @required  = "required"})
            <input id="button" class="btn btn-outline-dark my-sm-0" type="submit" value="Add new category"/>
            </center>
          }
          &nbsp;
      <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Show all categories", "Index")</button></center>
        &nbsp;
        &nbsp;
      </div>
    </div>
  </div>