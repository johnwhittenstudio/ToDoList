@{
  Layout = "_Layout";
}

@model ToDoList.Models.Category;
<div class="container">
  <br>
  <br>
  <div class="col-md-12">
    <div class=row>
      &nbsp;
      &nbsp;
      &nbsp;
      &nbsp;
      <div id="card" class="card border-dark mb-3" style="position: center; width: 100%; height: 50%">
        <div class="card-header">
        <center><strong><h1 id="title" style="font-size:6vw">Category Details</h1></strong></center>
        </div>
        &nbsp;
          <center><h4>@Html.DisplayNameFor(model => model.Name):</h4><h2> @Html.DisplayFor(model => model.Name)</h2></center>
        &nbsp;
          @if(@Model.JoinEntities.Count == 0)
          {
            <center><h3>This category does not contain any items</h3></center>
          }
          else
          {
            <center><h4>Items the category contains:</h4></center>

            @foreach(var join in Model.JoinEntities)
            {
              <center><h2>@join.Item.Description</h2></center>
            }

          }
      &nbsp;
      &nbsp;
      <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Edit Category", "Edit", new { id = Model.CategoryId })</button>
              <button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Delete Category", "Delete", new { id = Model.CategoryId })</button></center>
      &nbsp;
      &nbsp;
      <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Back to Categories", "Index")</button></center>
      &nbsp;
      &nbsp;
    </div>
  </div>
</div>