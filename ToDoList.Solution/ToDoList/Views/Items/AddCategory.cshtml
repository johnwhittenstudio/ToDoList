@{
  Layout = "_Layout";
}

@model ToDoList.Models.Item
<div class="container">
  <br>
  <br>
  <div class="col-md-12">
    <div class=row>
      &nbsp;
      &nbsp;
      &nbsp;
      &nbsp;
      <div id="card" class="card border-dark mb-3" style="position: center; width: 100%; height: 50%">
        <div class="card-header">
          <center>
          <h1>Add a category</h1>
          </center>
        </div>
        &nbsp;
        <center><h4>Add a category to this task:</h4><h2> @Html.DisplayFor(model => model.Description)</h2></center>
        &nbsp;
        @using (Html.BeginForm())
        {
          <center>
          @Html.HiddenFor(model => model.ItemId)

          @Html.Label("Select category")
          @Html.DropDownList("CategoryId")

          <input id="button" class="btn btn-outline-dark my-sm-0" type="submit" value="Save" />
          </center>
        }
        &nbsp;
        <center><button id="button" type="button" class="btn btn-outline-dark my-sm-0" style="max-height: 5rem; max-width: 15rem;">@Html.ActionLink("Back to list", "Index")</button></center>
        &nbsp;
        &nbsp;
      </div>
    </div>
  </div>